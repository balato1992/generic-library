<UserControl x:Class="GenericWpf.Components.Line"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GenericWpf.Components"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Rectangle Stretch="Fill" RadiusX="1" RadiusY="1" 
               Width="{Binding Path=LineWidth, RelativeSource={RelativeSource AncestorType=UserControl}}" 
               Height="{Binding Path=LineHeight, RelativeSource={RelativeSource AncestorType=UserControl}}" 
               Fill="{Binding Path=Color, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
</UserControl>
